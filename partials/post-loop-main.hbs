	{{#foreach posts}}
		{{#if featured }}
		<article class="padding-middle article{{#if @odd}} odd{{else}} even{{/if}}{{#if @first}} first{{/if}}{{#if @last}} last{{/if}} one-whole-article">
			<div class="animate-in full-parent" data-anim-type="fade-in" data-anim-delay="200">
				<div class="row no-padding full-parent desktop-tablet omega {{post_class}}">
					<div class="featured-preview">						
						<a href="{{url}}" target="_self" class="block">{{content words="0"}}</a>
						<div class="left-top-bar"><a class='text-uppercase' href="{{url}}" target="_self">Featured</a></div>
						<div class="right-bottom-bar"><a href="{{url}}" target="_self">{{title}}</a></div>
					</div>
 				</div>				
			</div>
		</article>
 		{{/if}}
	{{/foreach}}

 </div>
	

	